pipeline{
    agent any
    
    tools {nodejs "node"}
    
    stages{
        stage('clonar repositorio'){
            steps{
                git branch: 'main', url:'https://github.com/SrStricker/testes-e2e-ebac-shop.git'
            }
        }
        stage('instalar dependencias'){
            steps{
                bat 'npm install'
            }
        }
        stage('executar testes'){
            steps{
                echo 'npm run cy:run'
            }
        }
    }
}